{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", // Gebruik ESNext voor betere compatibiliteit
    "strict": true,
    "moduleResolution": "node", // Zorgt ervoor dat modules op de juiste manier worden geresolved
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noUnusedParameters": false,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "allowJs": false,
    "declaration": true
  },
  "include": ["src/**/*", "views/**/*"],
  "exclude": ["node_modules", "dist", "src/public/js/main.js"]
}
